<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xair.xaremotecam.MainActivity" >

<!--     <com.xair.xaremotecam.media.VideoSurfaceView
        android:id="@+id/media_surface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.xair.xaremotecam.media.VideoSurfaceView> -->


    <SurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_opendoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="开门" />

    <Button
        android:id="@+id/btn_recive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btn_opendoor"
        android:text="接听"
        android:layout_toRightOf="@+id/btn_opendoor" />

    <Button
        android:id="@+id/btn_refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btn_recive"
        android:text="拒绝"
        android:layout_toRightOf="@+id/btn_recive" />
    
</RelativeLayout>